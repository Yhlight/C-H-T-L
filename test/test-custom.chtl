// ========== 4. è‡ªå®šä¹‰æ ·å¼ç»„ä»¶ ==========

[Custom] @Style Theme(primary, secondary, radius = "4px")
{
    :root {
        --theme-primary: {{primary}};
        --theme-secondary: {{secondary}};
        --theme-radius: {{radius}};
    }
    
    .themed {
        color: var(--theme-primary);
        border-radius: var(--theme-radius);
    }
    
    .themed-bg {
        background: var(--theme-primary);
        color: white;
    }
}

