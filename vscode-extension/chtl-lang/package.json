{
  "name": "chtl-lang",
  "displayName": "CHTL Language Support",
  "description": "Language support for Component HTML Template Language (CHTL)",
  "version": "1.0.0",
  "publisher": "chtl-team",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters",
    "Linters"
  ],
  "keywords": [
    "chtl",
    "template",
    "component",
    "html",
    "珂朵莉"
  ],
  "activationEvents": [
    "onLanguage:chtl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [{
      "id": "chtl",
      "aliases": ["CHTL", "chtl"],
      "extensions": [".chtl"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "chtl",
      "scopeName": "source.chtl",
      "path": "./syntaxes/chtl.tmLanguage.json"
    }],
    "snippets": [{
      "language": "chtl",
      "path": "./snippets/chtl.snippets.json"
    }],
    "themes": [{
      "label": "CHTL Dark",
      "uiTheme": "vs-dark",
      "path": "./themes/chtl-dark.json"
    }],
    "configuration": {
      "title": "CHTL",
      "properties": {
        "chtl.compiler.path": {
          "type": "string",
          "default": "chtl",
          "description": "Path to CHTL compiler executable"
        },
        "chtl.format.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable CHTL formatting"
        },
        "chtl.format.indentSize": {
          "type": "number",
          "default": 2,
          "description": "Number of spaces for indentation"
        },
        "chtl.lint.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable CHTL linting"
        },
        "chtl.autocomplete.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable CHTL autocompletion"
        },
        "chtl.autocomplete.showComponents": {
          "type": "boolean",
          "default": true,
          "description": "Show component suggestions"
        }
      }
    },
    "commands": [{
      "command": "chtl.compile",
      "title": "CHTL: Compile Current File"
    }, {
      "command": "chtl.preview",
      "title": "CHTL: Preview in Browser"
    }, {
      "command": "chtl.createComponent",
      "title": "CHTL: Create New Component"
    }],
    "keybindings": [{
      "command": "chtl.compile",
      "key": "ctrl+shift+c",
      "mac": "cmd+shift+c",
      "when": "editorTextFocus && resourceExtname == .chtl"
    }],
    "menus": {
      "editor/context": [{
        "when": "resourceExtname == .chtl",
        "command": "chtl.compile",
        "group": "1_chtl"
      }, {
        "when": "resourceExtname == .chtl",
        "command": "chtl.preview",
        "group": "1_chtl"
      }]
    },
    "iconThemes": [{
      "id": "chtl-icons",
      "label": "CHTL Icons",
      "path": "./icons/chtl-icon-theme.json"
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2",
    "vscode-languageserver": "^8.0.2",
    "vscode-languageserver-textdocument": "^1.0.8"
  }
}