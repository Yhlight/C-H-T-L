// 综合测试：CSS 解析 + 模板展开

[Template] @Element ColorBox {
    div {
        style {
            background: #ff6b6b;
            padding: 20px;
            border: 2px solid #ff4757;
            border-radius: 8px;
            color: #ffffff;
        }
        slot;
    }
}

html {
    head {
        title { text { "CSS 解析测试" } }
    }
    
    body {
        h1 { 
            style {
                color: #2d3436;
                font-size: 24px;
            }
            text { "颜色值解析测试" } 
        }
        
        @Element ColorBox {
            p { text { "这是一个带颜色的盒子" } }
            
            ul {
                style {
                    list-style: none;
                    padding: 0;
                }
                
                li { 
                    style { color: #0984e3; }
                    text { "蓝色项目" } 
                }
                li { 
                    style { color: #00b894; }
                    text { "绿色项目" } 
                }
                li { 
                    style { color: #fdcb6e; }
                    text { "黄色项目" } 
                }
            }
        }
        
        div {
            style {
                margin-top: 20px;
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                padding: 15px;
                color: #fff;
            }
            text { "渐变背景测试" }
        }
    }
}