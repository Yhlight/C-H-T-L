# 配置系统测试

## 1. 基本配置
[Configuration] Default {
    # 编译器配置
    OUTPUT_FORMAT: "html"
    MINIFY_OUTPUT: "false"
    STRICT_MODE: "true"
    ERROR_LIMIT: "100"
    
    # 生成器配置
    INDENT_SIZE: "2"
    USE_TABS: "false"
    LINE_ENDING: "lf"
    QUOTE_STYLE: "double"
    ATTRIBUTE_QUOTES: "always"
    
    # 优化配置
    OPTIMIZE_CSS: "basic"
    OPTIMIZE_JS: "true"
    REMOVE_COMMENTS: "false"
}

## 2. 生产环境配置
[Configuration] Production {
    OUTPUT_FORMAT: "html"
    MINIFY_OUTPUT: "true"
    
    # 激进的优化
    OPTIMIZE_CSS: "advanced"
    OPTIMIZE_JS: "true"
    REMOVE_COMMENTS: "true"
    MERGE_SELECTORS: "true"
    TREE_SHAKING: "true"
    DEAD_CODE_ELIMINATION: "true"
    
    # 性能优化
    INLINE_CRITICAL_CSS: "true"
    LAZY_LOADING: "true"
}

## 3. 开发环境配置
[Configuration] Development {
    # 调试友好
    MINIFY_OUTPUT: "false"
    DEBUG_OUTPUT: "true"
    GENERATE_SOURCE_MAP: "true"
    
    # 开发体验
    ENABLE_HOT_RELOAD: "true"
    PERFORMANCE_MONITORING: "true"
    
    # 格式化
    INDENT_SIZE: "4"
    USE_TABS: "false"
}

## 4. Vue 输出配置
[Configuration] VueOutput {
    OUTPUT_FORMAT: "vue"
    JS_MODULE_TYPE: "esm"
    
    # Vue 特定配置
    SELF_CLOSING_TAGS: "true"
    ATTRIBUTE_QUOTES: "never"
}

## 5. 关键字别名配置
[Configuration] CustomKeywords {
    # 启用 Name 组
    DISABLE_NAME_GROUP: "false"
    
    # 自定义关键字别名
    Name.CUSTOM_STYLE: ["@Style", "@样式", "@CSS"]
    Name.CUSTOM_ELEMENT: ["@Element", "@元素", "@组件"]
    Name.TEMPLATE_STYLE: ["@Style", "@模板样式"]
    Name.KEYWORD_DELETE: ["delete", "删除", "remove"]
    Name.KEYWORD_INSERT: ["insert", "插入", "add"]
    
    # 限制选项数量
    Name.OPTION_COUNT: "3"
}

## 6. CSS 前缀配置
[Configuration] CSSPrefixes {
    CSS_PREFIX: ["-webkit-", "-moz-", "-ms-", "-o-"]
}

## 应用配置测试
# 使用默认配置
div.example {
    style {
        display: flex;
        transform: rotate(45deg);
    }
}

# 测试别名（如果启用了 CustomKeywords）
[Custom] @样式 MyStyle {
    color: red;
}

# 测试优化（如果启用了 Production）
div.optimize-me {
    style {
        /* 这个注释会被移除 */
        margin: 10px;
        padding: 10px;
    }
    
    style {
        /* 重复的样式块会被合并 */
        border: 1px solid black;
    }
}