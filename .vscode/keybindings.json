[
    {
        "key": "ctrl+shift+b",
        "command": "workbench.action.tasks.runTask",
        "args": "CMake: Build All"
    },
    {
        "key": "f5",
        "command": "workbench.action.debug.start",
        "when": "!inDebugMode"
    },
    {
        "key": "ctrl+f5",
        "command": "workbench.action.debug.run",
        "when": "!inDebugMode"
    },
    {
        "key": "f6",
        "command": "workbench.action.tasks.runTask",
        "args": "Compile Current CHTL File",
        "when": "resourceExtname == .chtl"
    },
    {
        "key": "f7",
        "command": "workbench.action.tasks.runTask",
        "args": "Generate Parsers"
    },
    {
        "key": "f8",
        "command": "workbench.action.tasks.runTask",
        "args": "Pack Modules"
    },
    {
        "key": "ctrl+shift+t",
        "command": "workbench.action.tasks.runTask",
        "args": "Run Tests"
    },
    {
        "key": "ctrl+shift+f",
        "command": "workbench.action.tasks.runTask",
        "args": "Format C++ Code"
    },
    {
        "key": "ctrl+alt+i",
        "command": "workbench.action.tasks.runTask",
        "args": "Build IDE"
    },
    {
        "key": "ctrl+alt+c",
        "command": "workbench.action.tasks.runTask",
        "args": "Clean Build"
    }
]