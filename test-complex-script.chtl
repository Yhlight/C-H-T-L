html {
    body {
        div {
            id: "test-div";
            button {
                id: "btn1";
                text { "点击我" }
            }
            
            script {
                // 测试多行脚本格式化
                {{#btn1}}?.addEventListener('click', function(e) {
                    console.log('Button clicked!');
                    {{&}}.style.backgroundColor = 'red';
                    
                    // 测试嵌套函数
                    setTimeout(() => {
                        console.log('Timeout fired');
                        {{&}}.style.backgroundColor = 'blue';
                    }, 1000);
                });
                
                // 测试对象字面量
                const config = {
                    color: 'green',
                    size: 100,
                    handler: function() {
                        console.log('Handler called');
                    }
                };
            }
        }
    }
}